@model SF.Models.Empresa
@{
    ViewData["Title"] = "Eliminar Empresa";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mt-5">
    <h2 class="mb-4 text-danger">¿Eliminar Empresa?</h2>
    <div class="alert alert-warning">
        ¿Estás seguro de que deseas eliminar la empresa <b>@Model.emp_nombre</b>?<br>
        Esta acción no se puede deshacer.
    </div>
    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="emp_id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Dashboard" class="btn btn-outline-primary">
            ← Volver al Dashboard
        </a>
    </div>
</div>
