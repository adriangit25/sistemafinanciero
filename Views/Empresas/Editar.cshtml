@model SF.Models.Empresa
@{
    ViewData["Title"] = "Editar Empresa";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mt-5">
    <h2 class="mb-4">Editar Empresa</h2>
    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="emp_id" />
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="emp_nombre" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Dirección</label>
            <input asp-for="emp_direccion" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Contacto</label>
            <input asp-for="emp_contacto" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Razón Social</label>
            <input asp-for="emp_razonsocial" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Estado</label>
            <input asp-for="emp_estado" class="form-control" value="activo" />
        </div>
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Dashboard" class="btn btn-outline-primary">
            ← Volver al Dashboard
        </a>
    </div>
</div>
