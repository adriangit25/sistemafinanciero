@model SF.Models.Producto
@{
    ViewData["Title"] = "Eliminar Producto";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mt-5">
    <h2 class="mb-4 text-danger">¿Eliminar Producto?</h2>
    <div class="alert alert-warning">
        ¿Estás seguro de que deseas eliminar el producto <b>@Model.pro_nombre</b>?<br>
        Esta acción no se puede deshacer.
    </div>
    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="pro_id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
