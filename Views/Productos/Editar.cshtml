@model SF.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mt-5">
    <h2 class="mb-4">Editar Producto</h2>
    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="pro_id" />
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="pro_nombre" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Detalle</label>
            <input asp-for="pro_detalle" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Estado</label>
            <input asp-for="pro_estado" class="form-control" value="activo" />
        </div>
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
