@model List<SF.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios del Sistema";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mt-5">
    <h2 class="text-2xl font-bold mb-4">Usuarios del Sistema</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Teléfono</th>
                <th>Estado</th>
                <th>Rol</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.reg_usuario</td>
                    <td>@u.reg_nombre</td>
                    <td>@u.reg_apellido</td>
                    <td>@u.reg_telefono</td>
                    <td>@u.reg_estado</td>
                    <td>@u.rol_nombre</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Dashboard" class="btn btn-outline-primary">
            ← Volver al Dashboard
        </a>
    </div>
</div>
