@model SF.Models.Rol
@{
    ViewData["Title"] = "Eliminar Rol";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mt-5">
    <h2 class="mb-4 text-danger">¿Eliminar Rol?</h2>
    <div class="alert alert-warning">
        ¿Estás seguro de que deseas eliminar el rol <b>@Model.rol_nombre</b>?<br>
        Esta acción no se puede deshacer.
    </div>
    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="rol_id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>

    <div class="w-full max-w-lg mx-auto flex justify-between mt-4"></div>
        <a asp-action="Index" asp-controller="Roles" class="btn btn-outline-secondary">
            ← Regresar a Roles
        </a>
        <a asp-action="Index" asp-controller="Dashboard" class="btn btn-outline-primary">
            Ir al Dashboard →
        </a>
    </div>
</div>
