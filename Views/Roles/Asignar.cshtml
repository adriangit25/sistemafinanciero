@model SF.Models.AsignarRolViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mt-5">
    <h2 class="text-2xl font-bold mb-4">Asignar Rol a Usuario</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success">@TempData["Mensaje"]</div>
    }

    <form asp-action="Asignar" method="post" class="w-full max-w-lg mx-auto bg-white shadow rounded-xl p-6">
        <div class="mb-4">
            <label class="form-label">Usuario</label>
            <select asp-for="reg_id" class="form-select" required>
                <option value="">Selecciona un usuario...</option>
                @foreach (var u in Model.Usuarios)
                {
                    <option value="@u.reg_id">@u.reg_nombre (@u.reg_usuario)</option>
                }
            </select>
        </div>
        <div class="mb-4">
            <label class="form-label">Rol</label>
            <select asp-for="rol_id" class="form-select" required>
                <option value="">Selecciona un rol...</option>
                @foreach (var r in Model.Roles)
                {
                    <option value="@r.rol_id">@r.rol_nombre</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-warning w-full font-bold mb-2">Asignar rol</button>
    </form>

    <div class="w-full max-w-lg mx-auto flex justify-between mt-4">
        <a asp-action="Index" asp-controller="Roles" class="btn btn-outline-secondary">
            ← Regresar a Roles
        </a>
        <a asp-action="Index" asp-controller="Dashboard" class="btn btn-outline-primary">
            Ir al Dashboard →
        </a>
    </div>
</div>
