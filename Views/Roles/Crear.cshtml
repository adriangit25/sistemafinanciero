@model SF.Models.Rol
@{
    ViewData["Title"] = "Nuevo Rol";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mt-5">
    <h2 class="mb-4">Nuevo Rol</h2>
    <form asp-action="Crear" method="post">
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="rol_nombre" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Descripción</label>
            <input asp-for="rol_descripcion" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Estado</label>
            <input asp-for="rol_estado" class="form-control" value="activo" />
        </div>
        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>

    <div class="w-full max-w-lg mx-auto flex justify-between mt-4"></div>
        <a asp-action="Index" asp-controller="Roles" class="btn btn-outline-secondary">
            ← Regresar a Roles
        </a>
        <a asp-action="Index" asp-controller="Dashboard" class="btn btn-outline-primary">
            Ir al Dashboard →
        </a>
    </div>
</div>
