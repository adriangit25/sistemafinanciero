@{
    ViewData["Title"] = "Login";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4 bg-white shadow rounded p-4">
            <h3 class="text-center mb-3 text-2xl font-bold">Iniciar Sesión</h3>
            <form asp-action="Login" method="post" class="space-y-4">
                <div>
                    <label for="reg_usuario" class="form-label">Usuario</label>
                    <input type="text" name="reg_usuario" class="form-control" required />
                </div>
                <div>
                    <label for="reg_contrasenia" class="form-label">Contraseña</label>
                    <input type="password" name="reg_contrasenia" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary w-full bg-blue-600 text-white">Entrar</button>
            </form>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
            <div class="mt-3 text-center">
                <a asp-action="Register">¿No tienes cuenta? Regístrate</a>
            </div>
        </div>
    </div>
</div>
