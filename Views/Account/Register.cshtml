@model SF.Models.Usuario
@{
    ViewData["Title"] = "Registro";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 bg-white shadow rounded p-4">
            <h3 class="text-center mb-3 text-2xl font-bold">Registro de Usuario</h3>
            <form asp-action="Register" method="post" class="space-y-4">
                <div>
                    <label class="form-label">Usuario</label>
                    <input asp-for="reg_usuario" class="form-control" required />
                </div>
                <div>
                    <label class="form-label">Contraseña</label>
                    <input asp-for="reg_contrasenia" type="password" class="form-control" required />
                </div>
                <div>
                    <label class="form-label">Nombre</label>
                    <input asp-for="reg_nombre" class="form-control" required />
                </div>
                <div>
                    <label class="form-label">Apellido</label>
                    <input asp-for="reg_apellido" class="form-control" required />
                </div>
                <div>
                    <label class="form-label">Teléfono</label>
                    <input asp-for="reg_telefono" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success w-full bg-green-600 text-white">Registrar</button>
            </form>
            <div class="mt-3 text-center">
                <a asp-action="Login">¿Ya tienes cuenta? Inicia Sesión</a>
            </div>
        </div>
    </div>
</div>
