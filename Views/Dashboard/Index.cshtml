@{
    var usuario = Context.Session.GetString("usuario");
    var rol = Context.Session.GetString("rol");
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen flex flex-col justify-center items-center bg-gradient-to-br from-blue-100 to-indigo-200 py-10">
    <div class="bg-white shadow-xl rounded-3xl p-8 w-full max-w-xl flex flex-col items-center">
        <img src="https://cdn-icons-png.flaticon.com/512/599/599305.png" alt="Finance Icon" class="mb-5 w-24 h-24">
        <h1 class="text-3xl font-bold text-blue-700 mb-2">¡Bienvenido al Sistema Financiero!</h1>
        <p class="text-xl text-gray-700 mb-6">
            Hola, <span class="font-semibold text-indigo-600">@usuario</span>.
        </p>

        @if (string.IsNullOrEmpty(rol))
        {
            <div class="alert alert-warning w-100 text-center text-lg mt-4" role="alert">
                No tienes ningún rol asignado actualmente.<br>
                Por favor, contacta con el administrador para que te asigne un rol y puedas acceder a las funcionalidades
                del sistema.
            </div>
        }
        else if (rol == "administrador")
        {
            <div class="w-full flex flex-col gap-2 sm:flex-row sm:gap-4 mt-2">
                <a asp-controller="Roles" asp-action="Index"
                    class="flex-1 btn btn-secondary py-3 text-lg rounded-xl shadow hover:bg-gray-200 transition mb-2">
                    <i class="bi bi-gear-fill"></i> Gestionar roles
                </a>
                <a asp-controller="Roles" asp-action="Asignar"
                    class="flex-1 btn btn-warning py-3 text-lg rounded-xl shadow hover:bg-yellow-100 transition mb-2">
                    <i class="bi bi-person-plus-fill"></i> Asignar roles a usuarios
                </a>
            </div>
            <div class="w-full flex flex-col gap-2 sm:flex-row sm:gap-4 mt-2">
                <a asp-controller="Empresas" asp-action="Index"
                    class="flex-1 btn btn-outline-primary py-3 text-lg rounded-xl shadow hover:bg-blue-100 transition mb-2">
                    <i class="bi bi-building"></i> Empresas
                </a>
                <a asp-controller="Productos" asp-action="Index"
                    class="flex-1 btn btn-outline-success py-3 text-lg rounded-xl shadow hover:bg-green-100 transition mb-2">
                    <i class="bi bi-box-seam"></i> Productos
                </a>
                <a asp-controller="Usuarios" asp-action="Index"
                    class="flex-1 btn btn-outline-dark py-3 text-lg rounded-xl shadow hover:bg-gray-200 transition mb-2">
                    Usuarios
                </a>
                <a asp-controller="Sueldos" asp-action="Index"
                    class="flex-1 btn btn-outline-dark py-3 text-lg rounded-xl shadow hover:bg-gray-200 transition mb-2">
                    Rol de pagos (Sueldos)
                </a>

            </div>
        }
        else
        {
            <div class="w-full flex flex-col gap-2 sm:flex-row sm:gap-4 mt-2">
                <a asp-controller="Empresas" asp-action="Index"
                    class="flex-1 btn btn-outline-primary py-3 text-lg rounded-xl shadow hover:bg-blue-100 transition mb-2">
                    <i class="bi bi-building"></i> Mis empresas
                </a>
                <a asp-controller="Productos" asp-action="Index"
                    class="flex-1 btn btn-outline-success py-3 text-lg rounded-xl shadow hover:bg-green-100 transition mb-2">
                    <i class="bi bi-box-seam"></i> Mis productos
                </a>
            </div>
        }

        <form asp-controller="Account" asp-action="Logout" method="post" class="mt-6 w-full flex justify-center">
            <button type="submit"
                class="btn btn-danger bg-red-600 text-white px-6 py-2 rounded-xl shadow hover:bg-red-700 transition font-bold">
                Cerrar sesión
            </button>
        </form>
        <div class="mt-6 text-center">
            <p class="text-gray-400 text-sm">Gestiona tus empresas, productos y mucho más desde aquí.</p>
        </div>
    </div>
</div>
